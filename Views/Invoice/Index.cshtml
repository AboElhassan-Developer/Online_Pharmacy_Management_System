 @model IEnumerable<Online_Pharmacy_Management_System.Models.Invoice>

@{
    ViewData["Title"] = "Invoices";
}

<h2>Invoices</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Invoice</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Date)
            </th>
            <th>
                Patient
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TotalAmount)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.Id</td>
                    <td>@invoice.Date.ToString("dd/MM/yyyy")</td>
                    <td>@(invoice.Patient != null ? invoice.Patient.Name : "N/A")</td>
                    <td>@invoice.TotalAmount.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@invoice.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No invoices available.</td>
            </tr>
        }
    </tbody>
</table>
