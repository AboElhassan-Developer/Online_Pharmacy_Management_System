@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="mb-3 text-primary"><i class="fas fa-lock"></i> @ViewData["Title"]</h1>
            <p class="lead">
                Your privacy is important to us. This page explains how we collect, use, and protect your personal data.
            </p>

            <h5><i class="fas fa-database text-secondary"></i> Data Collection</h5>
            <p>We collect only the necessary data required for improving your experience.</p>

            <h5><i class="fas fa-user-shield text-secondary"></i> Data Protection</h5>
            <p>We implement advanced security measures to keep your data safe.</p>

            <h5><i class="fas fa-share-alt text-secondary"></i> Data Sharing</h5>
            <p>We do not share your personal data with third parties without your consent.</p>

            <p class="mt-3">For more details, feel free to <a href="mailto:mamdohbassem2@gmail.com">Contact Us</a>.</p>

            <a class="btn btn-secondary mt-3" asp-controller="Home" asp-action="Index">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>
