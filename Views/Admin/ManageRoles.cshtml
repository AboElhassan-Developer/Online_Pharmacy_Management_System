@model List<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Manage Roles</h2>

<table class="table table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-controller="Role" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this role?');">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="AddRole" class="btn btn-success">Add New Role</a>
