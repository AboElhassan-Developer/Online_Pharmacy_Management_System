@model List<Online_Pharmacy_Management_System.Models.ApplicationUser>

<h2>Manage Users</h2>

<table class="table table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@ViewBag.UserRoles[user.Id]</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditUserRole" asp-route-userId="@user.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit Role
                    </a>
                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
