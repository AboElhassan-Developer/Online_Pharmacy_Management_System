@model List<Online_Pharmacy_Management_System.ViewModel.PatientViewModel>

@{
    ViewData["Title"] = "Patient List";
}

<h2>Patient List</h2>


<button class="btn btn-secondary mb-3" onclick="window.history.back();">
    <i class="fas fa-arrow-left"></i> Back
</button>
<form method="get" asp-action="Index">
    <input type="text" name="searchTerm" placeholder="Search by Name or Email" class="form-control w-25 d-inline-block" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<br />
<a asp-action="Add" class="btn btn-primary mb-3">
    <i class="fas fa-plus"></i> Add New Patient
</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Date of Birth</th>
            <th>Address</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.PatientId</td>
                <td>@patient.Name</td>
                <td>@patient.Email</td>
                <td>@patient.Phone</td>
                <td>@patient.DateOfBirth.ToShortDateString()</td>
                <td>@patient.Address</td>
                <td>@(patient.IsActive ? "Yes" : "No")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@patient.PatientId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
               <a asp-action="Delete" asp-route-id="@patient.PatientId" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this patient?');">
                        Delete
                    </a>
            </td>
        </tr>
    }
    </tbody>
</table>


