@model IEnumerable<Online_Pharmacy_Management_System.ViewModel.CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<h1 class="text-center text-primary">Categories List</h1>
<a class="btn btn-success mb-3" asp-action="Add">
    <i class="fas fa-plus"></i> Add New Category
</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Medicines Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>@category.Medicines.Count</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@category.CategoryId">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')" asp-action="Delete" asp-route-id="@category.CategoryId">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
