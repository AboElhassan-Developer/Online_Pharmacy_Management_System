@model Online_Pharmacy_Management_System.ViewModel.MedicineViewModel
@{
    ViewData["Title"] = "Delete Medicine";
}

<h1 class="text-center text-danger">Delete Medicine</h1>
@* <p class="text-center">@Model.Message</p> *@
<h2 class="text-danger">Are you sure you want to delete this Medicine?</h2>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>MedicineName</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Expiry Date</th>
            <th>Description</th>
          @*   <th>Is Available</th> *@
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.MedicineName</td>
            <td>@Model.Price.ToString("C")</td>
            <td>@Model.Stock</td>
            <td>@Model.ExpiryDate.ToString("yyyy-MM-dd")</td>
            
            <td>@Model.Description</td>
            @* <td>@(Model.IsAvailable ? "Yes" : "No")</td> *@
        </tr>
    </tbody>
</table>

<form method="post" asp-action="ConfirmDelete">
    <input type="hidden" asp-for="MedicineId" />
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Confirm Delete
        </button>
        <a href="/Medicine/Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </div>
</form>
