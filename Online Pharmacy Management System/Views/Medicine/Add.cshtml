@model Online_Pharmacy_Management_System.ViewModel.MedicineViewModel
@{
    ViewData["Title"] = "Add  Medicine";
}

<h1 class="text-center text-primary">Add New Medicine</h1>
<form method="post" asp-action="Add" asp-controller="Medicine">
    <div class="mb-3">
        <label asp-for="MedicineName" class="form-label fw-bold">MedicineName</label>
        <input class="form-control" asp-for="MedicineName" />
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label fw-bold">Price</label>
        <input class="form-control" asp-for="Price" />
    </div>
    <div class="mb-3">
        <label asp-for="Stock" class="form-label fw-bold">Stock</label>
        <input class="form-control" asp-for="Stock" />
    </div>
    <div class="mb-3">
        <label asp-for="ExpiryDate" class="form-label fw-bold">Expiry Date</label>
        <input class="form-control" asp-for="ExpiryDate" />
    </div>
     <div class="mb-3">
        <label asp-for="Description" class="form-label fw-bold">Description</label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="SupplierId" class="form-label fw-bold">Supplier</label>
        <select asp-for="SupplierId" asp-items="Model.Suppliers" class="form-control">
            <option value="">-- Select Supplier --</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="IsAvailable" class="form-label fw-bold">Available</label>
        <input type="checkbox" class="form-check-input" asp-for="IsAvailable" />
    </div> 
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus"></i> Save
        </button>
        <a href="/Medicine/Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </div>
</form>
